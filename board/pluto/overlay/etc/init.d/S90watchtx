# A very dirty trick for gpio running in bash, to inspect !
start() {

   /root/watchconsoletx.sh >/dev/null </dev/null 2>/dev/null &
   
}

stop() {
	echo heartbeat > /sys/class/leds/led0:green/trigger

	echo "Stopping"
}

restart() {
	stop
	start
}

# start/stop/restart
case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?


