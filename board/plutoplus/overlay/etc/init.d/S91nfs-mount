nfs_server=`fw_printenv -n nfs_server 2> /dev/null`

start() {
   if [[ -n $nfs_server ]]
	then
		
		echo "mounting NFS volume : $nfs_server on /root/remote waiting 3 seconds"
        sleep 7		
		eval 'mount -t nfs $nfs_server /root/remote'
		
	else
		
		echo "NFS: Nothing to do"
	fi
}

stop() {

	umount /root/remote
	echo "Stopping NFS"
}

restart() {
	stop
	start
}

# start/stop/restart
case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?



